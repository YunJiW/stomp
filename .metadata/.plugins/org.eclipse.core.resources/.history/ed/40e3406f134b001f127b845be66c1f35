<!DOCTYPE html>
<html>
<head>
    <title>Chat Room</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.1.2/sockjs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/stomp.js/2.3.3/stomp.min.js"></script>
    <style>
        #chat {
            max-height: 300px;
            overflow-y: scroll;
            border: 1px solid #ccc;
            padding: 10px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Chat Room</h2>
            <div id="chat">
                <ul id="messageList" class="list-group"></ul>
            </div>
            <input type="text" id="username" placeholder="Enter your name" class="form-control" />
            <input type="text" id="receiver" placeholder="Enter receiver name" class="form-control" />
            <input type="text" id="message" placeholder="Enter your message" class="form-control" />
            <button id="sendButton" class="btn btn-primary">Send</button>
        </div>
    </div>
</div>

<script>
    var stompClient = null;
    var username = null;

    // WebSocket 연결
    function connect() {
        var socket = new SockJS('/ws');
        stompClient = Stomp.over(socket);

        stompClient.connect({}, function (frame) {
            console.log('Connected: ', frame); // frame 객체를 로그로 출력
            username = document.getElementById('username').value; // 사용자 이름 가져오기

            // 사용자 메시지 구독
            stompClient.subscribe('/user/' + username + '/queue/messages', function (messageOutput) {
                console.log('Message received: ', messageOutput); // 수신한 메시지 출력
                showMessage(JSON.parse(messageOutput.body));
            });

            // 사용자 추가 메시지 전송
            var joinMessage = {
                sender: username,
                type: 'JOIN'
            };
            stompClient.send("/app/chat.addUser", {}, JSON.stringify(joinMessage));
        }, function (error) {
            console.error('Error connecting to WebSocket:', error); // 오류 발생 시 로그 출력
        });

    }

    // 메시지 전송
    function sendMessage() {
        var messageContent = document.getElementById('message').value;
        var receiver = document.getElementById('receiver').value;

        if (username && receiver && messageContent) {
            var chatMessage = {
                sender: username,
                receiver: receiver,
                content: messageContent,
                type: 'CHAT'
            };

            // 메시지를 전송
            stompClient.send("/app/chat.sendMessage", {}, JSON.stringify(chatMessage));
            document.getElementById('message').value = ''; // 메시지 입력란 초기화
        } else {
            alert("Please fill in all fields!"); // 입력 확인
        }
    }

    // 메시지 표시
    function showMessage(message) {
        var messageList = document.getElementById('messageList');
        var messageElement = document.createElement('li');

        messageElement.classList.add('list-group-item');
        messageElement.innerText = message.sender + ': ' + message.content;

        messageList.appendChild(messageElement);
    }

    // 버튼 클릭 이벤트
    document.getElementById('sendButton').addEventListener('click', sendMessage);
    document.getElementById('username').addEventListener('change', connect); // 사용자 이름 입력 시 연결
</script>
</body>
</html>
